<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_de_pantalla3"
    tools:context=".Cajas">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="412dp"
        android:layout_height="700dp"
        android:background="@drawable/border_ui"
        tools:ignore="MissingConstraints">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAgregarCaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_ui"
            android:clickable="true"
            android:src="@drawable/boton_agregar"
            app:backgroundTint="#FFFFFF"
            app:rippleColor="@color/colorAccent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,Suspicious0dp">

            <ImageButton
                android:id="@+id/imgPerfil1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:onClick="onClick"
                android:background="#00000000"
                android:src="@drawable/number_1" />

            <ImageButton
                android:id="@+id/imgPerfil2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:onClick="onClick"
                android:background="#00000000"
                android:src="@drawable/number_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/imgPerfil3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:onClick="onClick"
                android:background="#00000000"
                android:src="@drawable/number_3" />

            <ImageButton
                android:id="@+id/imgPerfil4"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:onClick="onClick"
                android:background="#00000000"
                android:src="@drawable/number_4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/imgPerfil5"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:onClick="onClick"
                android:background="#00000000"
                android:src="@drawable/number_5" />

            <ImageButton
                android:id="@+id/imgPerfil6"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:background="#00000000"
                android:src="@drawable/number_6"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:layout_weight="5"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/imgBalance"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/balance" />

        <ImageButton
            android:id="@+id/imgCajas"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/cajas" />

        <ImageButton
            android:id="@+id/imgNotificaciones"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/notificaciones" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>